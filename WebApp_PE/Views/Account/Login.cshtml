@model DataAccess.BsnLogic.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 420px;">
        <h3 class="text-center mb-4"><i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión</h3>
        <form asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="Usuario" />
                <label asp-for="Nombre"><i class="fas fa-user me-2"></i>Usuario</label>
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Contraseña" type="password" class="form-control" placeholder="Contraseña" />
                <label asp-for="Contraseña"><i class="fas fa-lock me-2"></i>Contraseña</label>
                <span asp-validation-for="Contraseña" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">
                <i class="fas fa-sign-in-alt me-2"></i>Ingresar
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
